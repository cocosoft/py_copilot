{
  "name": "py-copilot-desktop",
  "version": "1.0.0",
  "description": "Py Copilot Desktop Application",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "cd ../frontend && npm run build",
    "build:electron": "electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "pack-all": "npm run build:react && electron-builder --dir",
    "dist-all": "npm run build:react && electron-builder --publish=never",
    "lint": "echo 'No linting configured for Electron'",
    "test": "echo 'No tests configured for Electron'"
  },
  "build": {
    "appId": "com.pycopilot.desktop",
    "productName": "Py Copilot",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "!src/**/*.test.js",
      "!src/**/*.spec.js",
      "../frontend/dist/**/*",
      "../frontend/node_modules/**/*",
      "!**/node_modules/*/test/**/*",
      "!**/node_modules/*/docs/**/*",
      "!**/node_modules/*/.bin/**/*",
      "!**/node_modules/*/.*"
    ],
    "extraResources": [
      {
        "from": "../frontend/public",
        "to": "public",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeper-assess": false,
      "hardened-runtime": true,
      "provisioningProfile": "embedded.provisionprofile"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icons/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "icons/icon.png",
      "category": "Office",
      "desktop": {
        "Name": "Py Copilot",
        "Name[en]": "Py Copilot",
        "Name[zh]": "Python 助手",
        "Comment": "A powerful AI assistant desktop application",
        "Comment[en]": "A powerful AI assistant desktop application",
        "Comment[zh]": "一个功能强大的AI助手桌面应用程序",
        "Categories": "Office;Development;Science;Education;",
        "Keywords": "AI;Assistant;Python;Development;Productivity;",
        "Keywords[en]": "AI;Assistant;Python;Development;Productivity;",
        "Keywords[zh]": "AI;助手;Python;开发;生产力;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Py Copilot",
      "include": "installer.nsh",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "icons/icon.icns",
      "iconSize": 80,
      "window": {
        "width": 540,
        "height": 420
      },
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Office"
    },
    "deb": {
      "depends": [
        "libnss3",
        "libatk-bridge2.0-0",
        "libdrm2",
        "libxkbcommon0",
        "libxcomposite1",
        "libxdamage1",
        "libxrandr2",
        "libgbm1",
        "libxss1"
      ],
      "artifactName": "${productName}-${version}.${ext}",
      "priority": "optional"
    },
    "rpm": {
      "depends": [
        "nss",
        "atk",
        "gtk3",
        "libdrm",
        "libxkbcommon",
        "libXcomposite",
        "libXdamage",
        "libXrandr",
        "gbm",
        "libXScrnSaver"
      ],
      "artifactName": "${productName}-${version}.${ext}",
      "priority": "optional"
    },
    "publish": {
      "provider": "generic",
      "url": "https://your-update-server.com/releases/",
      "channel": "latest"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*",
      "src/**/*"
    ],
    "removePackageScripts": true,
    "detectUpdateChannel": true,
    "updater": "electron-updater",
    "autoupdate": {
      "enabled": false
    }
  },
  "author": {
    "name": "Py Copilot Team",
    "email": "team@pycopilot.com"
  },
  "license": "MIT",
  "keywords": [
    "ai",
    "assistant",
    "python",
    "development",
    "productivity",
    "desktop"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pycopilot/desktop"
  },
  "bugs": {
    "url": "https://github.com/pycopilot/desktop/issues"
  },
  "homepage": "https://pycopilot.com",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7",
    "electron-reload": "^2.0.0",
    "electron-devtools-installer": "^3.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-log": "^5.0.0",
    "electron-window-state": "^5.0.3",
    "electron-serve": "^1.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}